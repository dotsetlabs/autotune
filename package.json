{
  "name": "@dotsetlabs/autotune",
  "version": "1.0.0",
  "description": "Automatic self-improvement daemon for LLM agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "autotune": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "systemd",
    "scripts"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --max-warnings=0",
    "test": "npm run build && node --test test/**/*.test.js"
  },
  "keywords": [
    "autotune",
    "llm",
    "evaluation",
    "prompt",
    "optimizer"
  ],
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "eslint": "^9.19.0",
    "@eslint/js": "^9.19.0",
    "typescript-eslint": "^8.23.0",
    "globals": "^15.14.0"
  },
  "engines": {
    "node": ">=20"
  }
}
